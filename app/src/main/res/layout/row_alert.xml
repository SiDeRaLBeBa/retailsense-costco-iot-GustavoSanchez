<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/alertSeverity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Critical"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alert message here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertSeverity"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/alertDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertMessage"/>

    <TextView
        android:id="@+id/alertStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store 1"
        app:layout_constraintStart_toEndOf="@id/alertDevice"
        app:layout_constraintTop_toBottomOf="@id/alertMessage"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/alertTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/alertSeverity"/>

    <Button
        android:id="@+id/btnAcknowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acknowledge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alertDevice"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSuppress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suppress"
        app:layout_constraintStart_toEndOf="@id/btnAcknowledge"
        app:layout_constraintTop_toTopOf="@id/btnAcknowledge"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btnOpenDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Device"
        app:layout_constraintStart_toEndOf="@id/btnSuppress"
        app:layout_constraintTop_toTopOf="@id/btnAcknowledge"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
